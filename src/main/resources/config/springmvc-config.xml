<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:context="http://www.springframework.org/schema/context"
             xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:p="http://www.springframework.org/schema/p"
             xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd ">

    <!--添加扫描包(控制层的包)-->
    <context:component-scan base-package="com.suncaper.demo.controller"/>
    <!--配置视图解析器(控制层返回的字符串在视图解析器中解析并返回,前缀和后缀)-->
    <beans:bean id="viewResolver"
                class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <beans:property name="prefix" value="/WEB-INF/views/"/>
        <beans:property name="suffix" value=".jsp"/>
    </beans:bean>
    <!--如果controller处理不了,交给服务器处理(忽略静态资源)-->
    <mvc:default-servlet-handler/>
    <mvc:annotation-driven >
        <!--解决Response返回中文字符串乱码-->
        <!-- 消息转换器 -->
        <mvc:message-converters register-defaults="true">
            <beans:bean class="org.springframework.http.converter.StringHttpMessageConverter">
                <beans:property name="supportedMediaTypes" value="text/plain;charset=UTF-8"/>
            </beans:bean>
        </mvc:message-converters>
    </mvc:annotation-driven>

</beans:beans>